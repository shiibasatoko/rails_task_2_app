<p id="notice"><%= notice %></p>

<h1 class="display-4 text-primary">登録済みルーム一覧</h1>

<table class="table mt-5 mb-5">
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <%= link_to room_path(room) do %>
          <%= attachment_image_tag room, :image %>
          <% end %>
        </td>
        <td><%= link_to room.title,room_path(room) %></td>
        <td><%= room.body %></td>
        <td><%= room.fee %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
